#!/bin/bash

# Convert WATER and STIR from their bases to decimal
water_decimal=$((5#$(echo $WATER | tr 'water' '01234')))
stir_decimal=$((5#$(echo $STIR | tr 'stir.' '01234')))

# Add the two decimal numbers
sum_decimal=$((water_decimal + stir_decimal))

# Convert the sum from decimal to BESTCHOL base and print it
echo $(printf %o $sum_decimal | tr '01234567' 'behlnort')

